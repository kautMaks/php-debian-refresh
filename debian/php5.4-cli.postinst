#!/bin/sh

set -e

#DEBHELPER#

if [ "$1" != "configure" ]; then
	exit 0
fi

phpini="/etc/php/5.4/cli/php.ini"

ucf /usr/share/php/5.4/php.ini $phpini

update-alternatives \
	--install /usr/bin/php php /usr/bin/php5.4 54 \
	--slave /usr/share/man/man1/php.1.gz php.1.gz /usr/share/man/man1/php5.4.1.gz

exit 0
