#!/bin/sh

set -e

if [ "$1" != "configure" ]; then
	exit 0
fi

phpini="/etc/php/5.2/fpm/php-fpm.conf"

ucf /usr/share/php/5.2/php-fpm.conf $phpini

update-alternatives \
	--install /usr/sbin/php-fpm php-fpm /usr/sbin/php5.2-fpm 52 \
	--slave /usr/share/man/man1/php-fpm.1.gz php-fpm.1.gz /usr/share/man/man1/php5.2-fpm.1.gz

echo "You need to manually enable php5.2-fpm daemon."

exit 0
