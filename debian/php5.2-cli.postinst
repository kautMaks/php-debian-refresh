#!/bin/sh

set -e

#DEBHELPER#

if [ "$1" != "configure" ]; then
	exit 0
fi

phpini="/etc/php/5.2/cli/php.ini"

ucf /usr/share/php/5.2/php.ini-dist $phpini

update-alternatives \
	--install /usr/bin/php php /usr/bin/php5.2 -520 \
	--slave /usr/share/man/man1/php.1.gz php.1.gz /usr/share/man/man1/php5.2.1.gz

exit 0
